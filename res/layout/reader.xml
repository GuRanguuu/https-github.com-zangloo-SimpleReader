<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="fill_parent"
              android:layout_height="fill_parent">

	<LinearLayout style="@android:style/ButtonBar" android:id="@+id/seek_panel"
	              android:orientation="horizontal" android:layout_width="fill_parent"
	              android:layout_height="wrap_content" android:visibility="gone">
		<SeekBar android:id="@+id/seek_seekbar" android:layout_width="wrap_content" android:max="100"
		         android:layout_height="wrap_content" android:layout_weight="1"
		         android:gravity="center_vertical">
		</SeekBar>
		<TextView android:id="@+id/seek_percent_text" android:layout_height="wrap_content"
		          android:layout_width="wrap_content" android:gravity="center_vertical"
		          android:textAppearance="?android:attr/textAppearanceLarge"
		          android:paddingLeft="4dp" android:paddingRight="4dp"/>
		<Button android:id="@+id/seek_button_cancel" android:text="@string/button_cancel_text"
		        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		<Button android:id="@+id/seek_button_ok" android:text="@string/button_ok_text"
		        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	</LinearLayout>
	<LinearLayout style="@android:style/ButtonBar" android:id="@+id/search_panel"
	              android:orientation="horizontal" android:layout_width="fill_parent"
	              android:layout_height="wrap_content" android:visibility="gone">
		<EditText android:id="@+id/search_text_edit" android:layout_width="0dip"
		          android:layout_height="wrap_content" android:layout_weight="1" android:singleLine="true">
		</EditText>
		<Button android:id="@+id/search_button_search" android:text="@string/button_search_text"
		        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		<Button android:id="@+id/search_button_ok" android:text="@string/button_ok_text"
		        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		<Button android:id="@+id/search_button_cancel" android:text="@string/button_cancel_text"
		        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	</LinearLayout>
	<zhang.lu.SimpleReader.view.HTextView android:id="@+id/hbook_text" android:layout_width="fill_parent"
	                                      android:layout_height="wrap_content"
	                                      android:layout_weight="1"/>
	<zhang.lu.SimpleReader.view.XTextView android:id="@+id/xbook_text" android:layout_width="fill_parent"
	                                      android:layout_height="wrap_content"
	                                      android:layout_weight="1" android:visibility="gone"/>
</LinearLayout>

