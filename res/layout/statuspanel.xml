<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
	      android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:orientation="horizontal" android:paddingBottom="4dip"
		      android:paddingLeft="12dip" android:paddingRight="12dip"
		      android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:id="@+id/reading_book_text" android:layout_height="wrap_content"
			  android:layout_width="wrap_content" android:layout_weight="1"
			  android:textAppearance="?android:attr/textAppearanceLarge"/>
		<Button android:id="@+id/button_file" android:text="@string/menu_file"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"/>
	</LinearLayout>
	<LinearLayout android:orientation="horizontal" android:paddingBottom="4dip"
		      android:paddingLeft="12dip" android:paddingRight="12dip"
		      android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
			  android:text="@string/pos_label" android:textAppearance="?android:attr/textAppearanceLarge"/>
		<TextView android:id="@+id/reading_percent_text" android:layout_height="wrap_content"
			  android:layout_width="wrap_content" android:layout_weight="1"
			  android:textAppearance="?android:attr/textAppearanceLarge"/>
		<Button android:id="@+id/button_pos" android:text="@string/menu_seek"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"/>
	</LinearLayout>
	<LinearLayout android:orientation="horizontal" android:paddingBottom="4dip"
		      android:paddingLeft="12dip" android:paddingRight="12dip"
		      android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
			  android:text="@string/battery_label"
			  android:textAppearance="?android:attr/textAppearanceLarge"/>
		<TextView android:id="@+id/battery_level_text" android:layout_height="wrap_content"
			  android:layout_width="wrap_content" android:layout_weight="1"
			  android:textAppearance="?android:attr/textAppearanceLarge"/>
		<Button android:id="@+id/button_bright_mode" android:text="@string/button_switch_bright_label"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"/>
	</LinearLayout>
	<LinearLayout android:orientation="horizontal" android:paddingBottom="4dip"
		      android:paddingLeft="12dip" android:paddingRight="12dip"
		      android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
			  android:text="@string/time_label" android:textAppearance="?android:attr/textAppearanceLarge"/>
		<TextView android:id="@+id/reading_time_text" android:layout_height="wrap_content"
			  android:layout_width="wrap_content" android:layout_gravity="center_vertical"
			  android:textAppearance="?android:attr/textAppearanceLarge"/>
	</LinearLayout>
	<!--		<ImageView android:id="@+id/battery_icon"
		     android:layout_width="wrap_content" android:layout_height="wrap_content"
		     android:layout_gravity="center_vertical" android:background="#0106000d">
	  </ImageView>
	  -->
</LinearLayout>
