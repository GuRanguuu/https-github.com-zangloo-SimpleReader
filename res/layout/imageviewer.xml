<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
              android:layout_width="fill_parent" android:layout_height="fill_parent">
    <zhang.lu.SimpleReader.view.TouchImageView android:id="@+id/image_view"
                                               android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               android:layout_weight="1" android:scaleType="center">
    </zhang.lu.SimpleReader.view.TouchImageView>
    <LinearLayout style="@android:style/ButtonBar" android:orientation="horizontal"
                  android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true" android:background="@null">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_weight="1"/>
        <Button android:id="@+id/zoom_in" android:background="@drawable/zoom_in"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
        <Button android:id="@+id/zoom_out" android:background="@drawable/zoom_out"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
        <Button android:id="@+id/zoom_restore" android:background="@drawable/zoom_restore"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
    </LinearLayout>
</RelativeLayout>
