<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	  package="zhang.lu.SimpleReader"
	  android:versionCode="1"
	  android:versionName="1.0">
	<uses-sdk android:minSdkVersion="2"
		  android:targetSdkVersion="4"/>
	<supports-screens android:smallScreens="true"
			  android:normalScreens="true"
			  android:largeScreens="true"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="archos.permission.FULLSCREEN.FULL"/>

	<application android:label="SimpleReader" android:icon="@drawable/icon" android:debuggable="true">
		<activity android:name=".Reader"
			  android:label="@string/app_name"
			  android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity android:name=".FileDialog"
			  android:label="@string/app_name"
			  android:configChanges="orientation|keyboardHidden">
		</activity>
		<activity android:name=".OptionDialog"
			  android:label="@string/app_name"
			  android:configChanges="orientation|keyboardHidden">
		</activity>
	</application>
</manifest>
